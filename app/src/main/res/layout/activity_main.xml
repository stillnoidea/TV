<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary_color"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline android:layout_width="228dp"
                                                android:layout_height="103dp"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.2"/>
    <ImageView
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            tools:src="@drawable/rawr"
            android:id="@+id/big_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/bigger_image_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/bigger_image_margin"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="@dimen/bigger_image_margin"
            android:visibility="visible"
            android:src="@drawable/rawr" app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginTop="@dimen/image_margin" app:layout_constraintTop_toBottomOf="@+id/title_text"
            android:contentDescription="@string/foto_desc"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:background="@color/primary_color"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/coloured_backgroundCL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/big_pic" android:layout_marginEnd="@dimen/image_margin">

        <ImageView
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                tools:src="@drawable/z"
                android:id="@+id/winter_image"
                android:src="@drawable/z"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/image_margin" android:layout_marginStart="@dimen/image_margin"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
                android:layout_marginBottom="@dimen/image_margin" app:layout_constraintBottom_toTopOf="@+id/wall_image"
                android:contentDescription="@string/foto_desc"/>

        <ImageView
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                tools:src="@drawable/mur"
                android:id="@+id/wall_image"
                android:visibility="visible"
                android:src="@drawable/mur"
                android:layout_marginTop="@dimen/image_margin"
                app:layout_constraintEnd_toEndOf="@+id/winter_image"
                app:layout_constraintStart_toStartOf="@+id/winter_image" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="@dimen/image_margin" app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/foto_desc"/>

        <ImageView
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                tools:src="@drawable/kwiat"
                android:id="@+id/flower_image"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/kwiat"
                android:layout_marginStart="@dimen/image_margin"
                app:layout_constraintStart_toStartOf="@+id/wall_image"
                android:layout_marginEnd="@dimen/image_margin"
                app:layout_constraintEnd_toEndOf="@+id/wall_image"
                app:layout_constraintTop_toBottomOf="@+id/wall_image"
                android:layout_marginTop="@dimen/image_margin" app:layout_constraintHorizontal_bias="0.437"
                android:contentDescription="@string/foto_desc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="@string/rawr_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title_text"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="@dimen/title_margin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/image_margin"
            android:layout_marginTop="@dimen/title_margin"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="cursive"
            android:textSize="@dimen/title_size"
            app:layout_constraintHorizontal_bias="0.034" android:textStyle="bold|italic"
            android:textColor="@color/text_color"

    />


</androidx.constraintlayout.widget.ConstraintLayout>